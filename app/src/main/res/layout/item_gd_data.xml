<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/event_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="32sp"
        tools:text="22" />

    <TextView
        android:id="@+id/event_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_day"
        android:layout_alignStart="@id/event_day"
        android:layout_alignLeft="@id/event_day"
        android:layout_alignEnd="@id/event_day"
        android:layout_alignRight="@id/event_day"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        tools:text="Jan" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/event_day"
        android:layout_alignBottom="@id/event_month"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/event_day"
        android:layout_toRightOf="@id/event_day"
        android:background="@drawable/bg_event">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:text="Event Title" />

            <TextView
                android:id="@+id/event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:text="08:00 - 10:00" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>